<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_full_set_backgroundpurble"
    tools:context=".SplashScreen">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_full_set_backgroundpurble"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgsplash"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_swipe_curve" />
    <TextView
        android:id="@+id/swipeupTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:text="@string/swipe_up_to_login"/>

</RelativeLayout>