<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/one"
        android:id="@+id/homeimage"/>
    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/invisibletxt"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:layout_marginBottom="40dp"
        android:text="Howdy! sam"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/invisibletxt"/>
    <TextView
        android:id="@+id/txtquotes"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invisibletxt"
        android:maxLines="3"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:text="become the person you believe you were meant to be"
        android:textSize="@dimen/text_size_25"
        android:layout_marginTop="@dimen/margin_20"
        />
    <TextView
        android:id="@+id/txtauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtquotes"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:text="-Steve Jobs"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/text_size_25"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgstep"
         android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_step_in_wall"/>

    <LinearLayout
        android:id="@+id/stepinLinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
         android:gravity="center"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stepinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step in"
             android:gravity="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
             android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow"/>


    </LinearLayout>

</RelativeLayout>